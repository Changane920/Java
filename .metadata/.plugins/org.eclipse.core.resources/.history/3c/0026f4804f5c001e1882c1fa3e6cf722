package Method_EX;

import java.util.Scanner;

public class M_EX_5 {
	public static void main(String[] args) {
		// Fahrenheit <--> Celcius
		System.out.println("f or c");
		Scanner input1 = new Scanner(System.in);
		char txt = input1.next().charAt(0);

		if (txt == 'f') {
			System.out.print("Enter a Fahrenheit number: ");
			Scanner input2 = new Scanner(System.in);
			float num1 = input2.nextFloat();
			System.out.println(num1);
			

			float result = Fah_Cel(num1);
			System.out.println("Fahrenheit: " + result);
		} else {
			Cel_Fah();
		}
		//input1.close();
	}

	static float Fah_Cel(float num) {
		float result = (num - 32)*5/9;
		System.out.println(result);
		return result;
	}

	static void Cel_Fah() {

	}
}

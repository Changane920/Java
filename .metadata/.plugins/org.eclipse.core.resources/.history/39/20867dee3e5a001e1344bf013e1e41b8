package N_FL_EX;

public class N_FL_EX_12 {
	public static void main(String[] args) {
		int count = 0;
		for(int i = 1; i <= 5; i++) {
			for(int space = 5 - i; space >= 1; space--) {
				System.out.print(" ");
			}
			for(int first = 1; first <= i - 1; first++) {
				count++;
				System.out.print(count);
			}
		System.out.println();
		count--;
		}
		
		System.out.println("\nTest");
		int counter = 0;
		for(int i = 1; i <= 5; i++) {
			for(int j = 1 ; j <= i; j++) {
				System.out.print(counter+=1);
			}
			counter--;
			System.out.println();
		}
	}
}

package FL_EX;

import java.util.Scanner;

public class Login_Attempt {
	
	static boolean flag;
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.print("Enter a name: ");
		String name = sc.next();
		System.out.print("Enter a password: ");
		String pass = sc.next();
		
		flag = checkPass(name, pass);
		if(!flag) {
			System.out.println("Success");
		}
		else {
			System.out.println("Fail");
		}
	}
	
	static boolean checkPass(String name, String pass) {
		String uname = "chan";
		String upass = "chan12";
		int count = 0;

		do {
			count++;
			flag = true;
		}
		while(count < 5 || uname == name && upass == pass);
		flag = false;
		return flag;
	}
}

package N_FL_EX;

public class N_FL_EX_12 {
	public static void main(String[] args) {
		int count = 1;
		for(int i = 1; i <= 5; i++) {
			count = i * (i - 1) / 2 + 1;
			for(int space = 5 - i; space >= 1; space--) {
				System.out.print(" ");
			}
			for(int first = 1; first <= i; first++) {
				System.out.print(count);
				count += 1;
			}
		System.out.println();
		}
		
		System.out.println("\nTest");
		int counter = 0;
		for(int i = 1; i <= 5; i++) {
			for(int j = 1 ; j <= i; j++) {
				System.out.print(counter+=1);
			}
			counter--;
			System.out.println();
		}
	}
}

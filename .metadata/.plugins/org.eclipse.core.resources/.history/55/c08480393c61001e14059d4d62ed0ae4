package Array_EX;

public class A_EX_11 {
	public static void main(String[] args) {
		String str = "This is a word.";
		String str2 = "This is a word.";
		
		char[] c_array = str.replaceAll(" ", "").toCharArray();
		char[] c_array2 = str2.replaceAll(" ", "").toCharArray();
		
		if(c_array.length == c_array2.length) {
			for(int i = 0, k = 0; i < c_array.length && k < c_array2.length; i++) {
				System.out.print(c_array[i] + " ");
				System.out.println();
				System.out.print(c_array2[k] + " ");
			}
		}
		for(char c : c_array) {
			System.out.print(c + " ");
		}
	}
}

package N_FL_EX;

public class N_FL_EX_22 {
	public static void main(String[] args) {
		char alpha = 'A';
		char temp = 'E';
		int num = 69;
		int num2 = 68;
		int count = 0;
		
		for(int row = 1; row <= 5; row++) {
			for(char word = alpha; word <= num; word++) {
				System.out.print(word);
			}
			num--;
			for(int space = 1; space <= row - 1; space++) {
				count++;
				if(count % 2 != 0) {
					for(int i = 1; i <= count; i++) {
						System.out.print("X");						
					}
				}
			}
			for(char word2 = temp; word2 >= alpha; word2--) {
				System.out.print(word2);
			}
			temp--;
			System.out.println();
		}
	}
}

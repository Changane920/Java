package N_FL_EX;

public class N_FL_EX_17 {
	public static void main(String[] args) {
		int count = 0;
		for(int row = 1; row <= 5; row++) {
			for(int space = 1; space <= row; space++) {
				System.out.print(" ");
			}
			for(int star = 1; star <= row; star++) {
				count++;
				if(count%2 != 0) {
					for(int star2 = 1; star2 <= count; star2++) {
						System.out.print("* ");
					}
				}
				System.out.println();
			}
			System.out.println();
		}
	}
}

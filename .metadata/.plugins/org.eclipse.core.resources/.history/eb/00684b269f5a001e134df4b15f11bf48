package N_FL_EX;

public class N_FL_EX_12 {
	public static void main(String[] args) {
		int count = 1;
		for (int i = 1; i <= 5; i++) {
            // Adjust starting num for the next row
            count = i * (i - 1) / 2 + 1;

            // Print spaces for the left alignment
            for (int j = 5 - i; j > 0; j--) {
                System.out.print(" ");
            }

            // Print the numbers
            for (int k = 1; k <= i; k++) {
                System.out.print(count);
                count += 1;  // Increment num by 1 for the desired pattern
            }

            System.out.println();
        }
		
		System.out.println("\nTest");
		int counter = 0;
		for(int i = 1; i <= 5; i++) {
			for(int j = 1 ; j <= i; j++) {
				System.out.print(counter+=1);
			}
			counter--;
			System.out.println();
		}
	}
}

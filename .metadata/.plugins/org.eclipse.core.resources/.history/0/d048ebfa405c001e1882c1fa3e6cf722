package Method_EG;

import java.util.Scanner;

public class M_EG_4 {
	public static void main(String[] args) {
		Scanner num1 = new Scanner(System.in);
		System.out.println("First number");
		
		Scanner num2 = new Scanner(System.in);
		System.out.println("Second number");
		
		Scanner operator = new Scanner(System.in);
		System.out.println("Arithmtic Expression");
		
		switch (operator.next().charAt(0)) {
		case '+': 
			System.out.println(sum(num1.nextInt(),num2.nextInt()));
			break;
		case '-':
			System.out.println(minus(num1.nextInt(),num2.nextInt()));
			break;
		case '*':
			System.out.println(multiply(num1.nextInt(),num2.nextInt()));
			break;
		case '/':
			System.out.println(divide(num1.nextInt(),num2.nextInt()));
			break;
		}
	}
		
	static int sum(int x, int y) {
		return x + y;
	}
	
	static int minus(int x, int y) {
		return x - y;
	}
	
	static int multiply(int x, int y) {
		return x * y;
	}
	
	static int divide(int x, int y) {
		return x / y;
	}
}

package Game;

public class tictactoe {
	static String[] board;
	public static void main(String[] args) {
		board = new String[9];
		for(int i = 0; i < board.length; i++) {
			board[i] = String.valueOf(i+1);
		}
		printBoard();
	}
	
	static void printBoard() {
		int num = 0;
		for(int i = 1; i <= 7; i++) {
			if(i == 1 || i == 7) {
				System.out.println("| --- | --- | --- |");
			}
			else {
				for(int j = 1; j <= i; j++) {
					if(i%2 == 0) {
						System.out.println("| " + board[num] + " | " + board[++num] + " | " + board[++num] + " |");
						if(num > board.length) {
							num--;
						}
					}
				}				
			}
		}
	}
}

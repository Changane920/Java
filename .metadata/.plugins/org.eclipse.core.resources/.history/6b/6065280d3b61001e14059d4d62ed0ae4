package Array_EX;

import java.util.Arrays;

public class A_EX_11 {
	public static void main(String[] args) {
		String str = "This is a word.";
		char[] c_array = new char[str.length()];
		for(int i = 0; i < c_array.length; i++) {
			c_array[i] = str.substring(0, i+1).charAt(0);
		}
		Arrays.toString(c_array);
	}
}
